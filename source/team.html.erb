<div id="about">
  <div class="about-content">
    <h1>This template was built with <i class="fas fa-heart"></i> by</h1>
    <ul class="list-inline">
      <% data.team.each do |user| %>
        <li>
            <%= image_tag "#{user.user_image}", class: "img-circle" %>
          <h2><%= user.name %></h2>
          <p>
            <% link_to "https://www.facebook.com/{user.username}", target: "_blank" do %>
              <i class="fab fa-github"></i> <%= user.url %>
            <% end %>
          </p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
